<application xmlns="http://www.worklight.com/application-descriptor" id="CAB" platformVersion="5.5.0">
    <displayName>CAB</displayName>
    <description>Company's Address Book demo</description>
    <author>
        <name>Dmitry Savustjan</name>
        <email>d.savustjan@ru.ibm.com</email>
        <homepage>http://www.ibm.ru</homepage>
        <copyright>IBM Russia</copyright>
    </author>
    <height>460</height>
    <width>320</width>
    <mainFile>CAB.html</mainFile>
    <thumbnailImage>common/images/thumbnail.png</thumbnailImage>
    <iphone bundleId="ru.ibm.iphone.CAB" version="1.0">
        <worklightSettings include="true"/>
        <security>
            <encryptWebResources enabled="false"/>
            <testWebResourcesChecksum enabled="false" ignoreFileExtensions="png, jpg, jpeg, gif, mp4, mp3"/>
